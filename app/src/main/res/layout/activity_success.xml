<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/background"
    android:gravity="center"
    tools:context="com.example.jownjie.nihingo.SuccessActivity">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:background="@drawable/border_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Excellent!"
            android:id="@+id/tv_successText"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You completed the "
            android:id="@+id/textView8"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/tv_successText"
            android:layout_alignLeft="@+id/tv_successText"
            android:layout_alignStart="@+id/tv_successText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="level in n seconds"
            android:id="@+id/tv_excellent"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />
    </LinearLayout>



    <ImageView
        android:background="@drawable/back"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/button_back_menu_succ"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <ImageView
        android:background="@drawable/back"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/button_next_level_succ"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/button_back_menu_succ"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" />

</RelativeLayout>
