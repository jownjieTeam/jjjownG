<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:weightSum="1.2"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.example.jownjie.nihingo.GameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTimer"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:gravity="center"
        android:layout_weight="0.4"
        android:id="@+id/haha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <!--
                <LinearLayout
                    android:gravity="center"
                    android:padding="40dp"
                    android:orientation="vertical"
                    android:layout_width="250dp"
                    android:layout_height="250dp">
                    <ImageView
                    android:src="@drawable/generalinfo_above"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView" />
                </LinearLayout>
        -->

        <com.facebook.drawee.view.SimpleDraweeView
            android:padding="20dp"
            fresco:backgroundImage="@mipmap/image"
            fresco:roundedCornerRadius="5dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:padding="60dp"
            fresco:placeholderImageScaleType="fitStart"
            fresco:backgroundImage="@color/black_overlay"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/ans_container"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/haha"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tableLayout">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button1"
                    android:layout_column="0" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button2"
                    android:layout_column="1" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button3"
                    android:layout_column="2" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button4"
                    android:layout_column="3" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button5"
                    android:layout_column="4" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button11"
                    android:layout_column="4" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button6"
                    android:layout_column="0" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button7"
                    android:layout_column="1" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button8"
                    android:layout_column="2" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button9"
                    android:layout_column="3" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button10"
                    android:layout_column="4" />

                <Button
                    android:textSize="20sp"
                    android:visibility="gone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/button12"
                    android:layout_column="5" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

