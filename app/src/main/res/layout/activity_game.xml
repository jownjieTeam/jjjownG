<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:weightSum="1.2"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"

    tools:context="com.example.jownjie.nihingo.GameActivity">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@mipmap/background"
        android:gravity="center">

        <LinearLayout
            android:gravity="center"
            android:padding="50dp"
            android:background="@mipmap/success_box"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Excellent!"
                android:id="@+id/tv_successText"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="You completed the "
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/tv_successText"
                android:layout_alignLeft="@+id/tv_successText"
                android:layout_alignStart="@+id/tv_successText" />

            <TextView
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="level in n seconds"
                android:id="@+id/tv_excellent"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8" />
        </LinearLayout>



        <ImageView
            android:background="@drawable/back"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/button_back_menu_succ"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <ImageView
            android:background="@drawable/next"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:id="@+id/button_next_level_succ"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@mipmap/star"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@mipmap/star"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:background="@mipmap/star"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/page1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textViewTimer"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:gravity="center"
            android:layout_weight="0.4"
            android:id="@+id/haha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">


            <!--
                    <LinearLayout
                        android:gravity="center"
                        android:padding="40dp"
                        android:orientation="vertical"
                        android:layout_width="250dp"
                        android:layout_height="250dp">
                        <ImageView
                        android:src="@drawable/generalinfo_above"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView" />
                    </LinearLayout>
            -->

            <com.facebook.drawee.view.SimpleDraweeView
                fresco:placeholderImageScaleType="fitStart"
                fresco:backgroundImage="@color/black_overlay"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/imageView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <HorizontalScrollView
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:id="@+id/ans_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_below="@id/haha"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/tableLayout">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button1"
                        android:layout_column="0" />

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button2"
                        android:layout_column="1" />

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button3"
                        android:layout_column="2" />

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button4"
                        android:layout_column="3" />

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button5"
                        android:layout_column="4" />

                    <Button
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button11"
                        android:layout_column="4" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button6"
                        android:layout_column="0" />

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button7"
                        android:layout_column="1" />

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button8"
                        android:layout_column="2" />

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button9"
                        android:layout_column="3" />

                    <Button
                        android:textSize="20sp"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button10"
                        android:layout_column="4" />

                    <Button
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:background="@mipmap/new_box"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/button12"
                        android:layout_column="4" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <ImageButton
            android:layout_gravity="center"
            android:background="@drawable/volume"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button_playSound" />

    </LinearLayout>

</LinearLayout>