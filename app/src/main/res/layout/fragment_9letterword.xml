<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@mipmap/background">

    <com.facebook.drawee.view.SimpleDraweeView
        android:background="@mipmap/nine_letter_word"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true" />

    <TableLayout
        android:id="@+id/nine_tableLayout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button1"
                android:layout_column="0" />

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button2"
                android:layout_column="1" />

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button3"
                android:layout_column="2" />

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button4"
                android:layout_column="3" />

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button5"
                android:layout_column="4" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/five_tableLayout"
            android:layout_alignRight="@+id/five_button_back_menu"
            android:layout_alignEnd="@+id/five_button_back_menu">

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button6"
                android:layout_column="0" />

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button7"
                android:layout_column="1" />

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button8"
                android:layout_column="2" />

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button9"
                android:layout_column="3" />

            <Button
                android:textSize="20sp"
                android:background="@mipmap/new_box"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/nine_button10"
                android:layout_column="4" />
        </TableRow>
    </TableLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:background="@drawable/back"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:id="@+id/nine_button_back_menu"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>